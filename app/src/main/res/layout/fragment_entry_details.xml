<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.fragment.EntryDetailsFragment">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/entryDetailsProgressBar"
            android:visibility="gone" />
    <ScrollView
            android:id="@+id/entryDetailsScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/detailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textSize="30sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp" />
            <TextView
                    android:id="@+id/detailsAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textStyle="italic"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="5dp" />
            <TextView
                    android:id="@+id/detailsCreatedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textStyle="italic"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="5dp" />
            <TextView
                    android:id="@+id/detailsContent"
                    android:layout_marginTop="10dp"
                    android:text="@string/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>